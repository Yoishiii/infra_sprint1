[Unit]
Description=gunicorn daemon for Kittygram
After=network.target

[Service]
User=yc-user
Group=www-data
WorkingDirectory=/home/yc-user/infra_sprint1/backend/kittygram_backend
ExecStart=/home/yc-user/infra_sprint1/venv/bin/gunicorn --workers 3 --bind 127.0.0.1:8080 kittygram_backend.wsgi:application

[Install]
WantedBy=multi-user.target

